server {
  listen 80;

  root /var/www/public/;

  server_name web;
  fastcgi_buffers 8 16k;
  fastcgi_buffer_size 32k;
  fastcgi_connect_timeout 2s;
  fastcgi_send_timeout 2s;
  fastcgi_read_timeout 2s;

  location ^~ /.well-known/acme-challenge {
    root /tmp/letsencrypt/www;
  }

  location / {
    rewrite ^ https://$host$request_uri? permanent;
  }
}

server {
  listen 443;
  server_name web;

  ssl on;
  ssl_certificate /etc/nginx/certs/fullchain.pem;
  ssl_certificate_key /etc/nginx/certs/privkey.pem;
  ssl_session_timeout 5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
  ssl_prefer_server_ciphers on;

  ssl_session_cache shared:SSL:10m;

  location ^~ /.well-known/acme-challenge {
    root /tmp/letsencrypt/www;
  }

  root /var/www/public/;
  fastcgi_buffers 8 16k;
  fastcgi_buffer_size 32k;
  fastcgi_connect_timeout 5s;
  fastcgi_send_timeout 5s;
  fastcgi_read_timeout 5s;

  location ~ /themes|/api|/auth|/socket.io {
    proxy_pass http://web;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location ~ /cms {
    gzip_static on;
    try_files /admin/index.html =404;
  }

  location ~ /|/app {
    gzip_static on;
    try_files /$uri @prerender;
  }

  location @prerender {
    set $token ${PRERENDER_TOKEN};
    proxy_set_header X-Prerender-Token $token;

    set $prerender 0;
    if ($http_user_agent ~* "googlebot|yahoo|bingbot|baiduspider|yandex|yeti|yodaobot|gigabot|ia_archiver|facebookexternalhit|twitterbot|developers\.google\.com") {
        set $prerender 1;
    }
    if ($args ~ "_escaped_fragment_|prerender=1") {
        set $prerender 1;
    }
    if ($http_user_agent ~ "Prerender") {
        set $prerender 0;
    }

    if ($uri ~ "\.(js|css|xml|less|png|jpg|jpeg|gif|pdf|doc|txt|ico|rss|zip|mp3|rar|exe|wmv|doc|avi|ppt|mpg|mpeg|tif|wav|mov|psd|ai|xls|mp4|m4a|swf|dat|dmg|iso|flv|m4v|torrent|ttf|woff)") {
        set $prerender 0;
    }

    #resolve using Google's DNS server to force DNS resolution and prevent caching of IPs
    resolver 8.8.8.8;

    if ($prerender = 1) {
      set $pre A;
    }

    if ($token != "local") {
      set $pre "${pre}B";
    }

    if ($token = "local") {
      set $pre "${pre}C";
    }

    if ($pre = AB) {
      #setting prerender as a variable forces DNS resolution since nginx caches IPs and doesnt play well with load balancing
      set $prerender "service.prerender.io";
      rewrite .* /$scheme://$host$request_uri? break;
      proxy_pass http://$prerender;
    }

    if ($pre = AC) {
      rewrite .* /$scheme://$host$request_uri? break;
      proxy_pass http://prerender:3000;
    }

    # resolver 8.8.8.8;
    # if ($prerender = 1) {
    #     rewrite .* /$scheme://$host$request_uri? break;
    #     proxy_pass http://prerender:3000;
    # }

    if ($prerender = 0) {
      rewrite .* /app/index.html break;
    }
  }
}
